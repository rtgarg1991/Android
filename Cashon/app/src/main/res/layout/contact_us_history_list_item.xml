<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8">
    <!-- A CardView that contains a TextView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_out"
                android:id="@+id/contact_us_history_list_item_message_out_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/dimen_120"
                    android:id="@+id/contact_us_history_list_item_message_out_text_view"
                    android:textColor="@color/white"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/text_size_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_history_list_item_message_out_date_text_view"
                    android:textColor="@color/black_dim"
                    android:layout_below="@id/contact_us_history_list_item_message_out_text_view"
                    android:layout_alignRight="@id/contact_us_history_list_item_message_out_text_view"
                    android:textSize="@dimen/text_size_10"
                    android:layout_marginRight="@dimen/dimen_8"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_in"
                android:id="@+id/contact_us_history_list_item_message_in_view"
                android:layout_below="@id/contact_us_history_list_item_message_out_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/dimen_120"
                    android:id="@+id/contact_us_history_list_item_message_in_text_view"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/text_size_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_history_list_item_message_in_date_text_view"
                    android:textColor="@color/black_dim"
                    android:textSize="@dimen/text_size_10"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_below="@id/contact_us_history_list_item_message_in_text_view"
                    android:layout_alignRight="@id/contact_us_history_list_item_message_in_text_view"/>

            </RelativeLayout>
        </RelativeLayout>
</LinearLayout>