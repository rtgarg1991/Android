<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        card_view:cardCornerRadius="@dimen/dimen_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="@dimen/dimen_80"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_60"
                android:id="@+id/recharge_history_list_item_inr_text_view"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="â‚¹"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/recharge_history_list_item_inr_text_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:text="Top Up - "
                    android:textSize="@dimen/text_size_20"
                    android:id="@+id/recharge_history_list_item_top_up_text_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="Rs. 20"
                    android:textSize="@dimen/text_size_20"
                    android:id="@+id/recharge_history_list_item_amount_text_view"
                    android:layout_toRightOf="@id/recharge_history_list_item_top_up_text_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="Success"
                    android:textSize="@dimen/text_size_20"
                    android:id="@+id/recharge_history_list_item_success_text_view"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:id="@+id/recharge_history_list_item_type_image_view"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:src="@drawable/mobile"
                    android:layout_below="@+id/recharge_history_list_item_top_up_text_view"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20"
                    android:id="@+id/recharge_history_list_item_number_text_view"
                    android:layout_below="@+id/recharge_history_list_item_top_up_text_view"
                    android:layout_toRightOf="@id/recharge_history_list_item_type_image_view"
                    android:layout_marginLeft="@dimen/dimen_2"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:textColor="@color/black"
                    android:text="7503650942"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:id="@+id/recharge_history_list_item_date_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/recharge_history_list_item_success_text_view"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:textColor="@color/primary"
                    android:text="dsfdfs"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:id="@+id/recharge_history_list_item_reference_text_view"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Reference Number : "
                android:layout_marginLeft="@dimen/dimen_12"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>