<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        card_view:cardCornerRadius="@dimen/dimen_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="@dimen/dimen_80"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_24"
                android:background="@color/material_color_teal"
                android:id="@+id/recharge_history_list_item_amount_text_view"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="R10"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/recharge_history_list_item_amount_text_view" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:id="@+id/recharge_history_list_item_type_image_view"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:src="@drawable/mobile"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20"
                    android:id="@+id/recharge_history_list_item_number_text_view"
                    android:layout_toRightOf="@id/recharge_history_list_item_type_image_view"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dimen_2"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:text="7503650942"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:id="@+id/recharge_history_list_item_company_text_view"
                    android:layout_below="@id/recharge_history_list_item_number_text_view"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:textColor="@color/black_dim"
                    android:text="Airtel"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:id="@+id/recharge_history_list_item_reference_text_view"
                    android:layout_below="@id/recharge_history_list_item_company_text_view"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:textColor="@color/black_dim"
                    android:text="Reference :"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:id="@+id/recharge_history_list_item_reference_number_text_view"
                    android:layout_below="@id/recharge_history_list_item_company_text_view"
                    android:layout_toRightOf="@id/recharge_history_list_item_reference_text_view"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:textColor="@color/black"
                    android:text="FCVW150917231783073"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>