<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="@dimen/dimen_4"
    android:layout_margin="@dimen/dimen_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingRight="@dimen/dimen_8">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/image_view_app_install_width"
                android:layout_height="@dimen/image_view_app_install_height"
                android:padding="@dimen/image_view_app_install_padding"
                android:paddingBottom="@dimen/image_view_app_install_padding_bottom"
                android:id="@+id/app_install_list_item_image_view"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_8"/>
            <ImageView
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:id="@+id/app_install_list_item_new_image_view"
                android:layout_alignParentLeft="true"
                android:src="@drawable/new_tag"/>

            <TextView
                android:id="@+id/app_install_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:layout_toRightOf="@id/app_install_list_item_image_view"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:layout_marginTop="@dimen/dimen_6"
                android:layout_marginLeft="@dimen/dimen_4"
                android:layout_marginBottom="@dimen/app_install_item_title_margin_bottom"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/app_install_list_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Install to earn money!"
                android:gravity="left"
                android:layout_toRightOf="@id/app_install_list_item_image_view"
                android:layout_below="@id/app_install_list_item_title"
                android:layout_marginTop="@dimen/app_install_item_description_margin_top"
                android:layout_marginLeft="@dimen/dimen_4"
                android:layout_marginBottom="@dimen/app_install_item_description_margin_bottom"
                android:textColor="@color/primary_dim"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/app_install_list_item_payout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_24"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="@dimen/app_install_item_payout_margin_left"
                android:layout_marginBottom="@dimen/app_install_item_payout_margin_bottom"
                android:layout_marginRight="@dimen/app_install_item_payout_margin_right"
                android:textColor="@color/black"
                android:text="â‚¹ 50"
                android:background="@drawable/app_install_payout_button"
                android:padding="6dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_install_item_button_margin_top">
            <Button
                android:id="@+id/app_install_list_item_Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_size_17"
                android:text="@string/app_install_install"
                android:layout_marginLeft="@dimen/app_install_item_button_margin_left"
                android:layout_marginRight="@dimen/app_install_item_button_margin_right"
                android:textColor="@color/white"
                android:background="@drawable/cashguru_btn_default_holo_light"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/app_install_list_item_description"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/app_install_item_button_margin_top"
                android:layout_marginLeft="@dimen/dimen_12"
                android:layout_marginBottom="@dimen/app_install_item_button_margin_bottom"
                android:layout_marginRight="@dimen/app_install_item_button_margin_right"
                android:textColor="@color/black_dim"
                android:layout_toLeftOf="@id/app_install_list_item_Button"
                android:textSize="@dimen/dimen_14"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>