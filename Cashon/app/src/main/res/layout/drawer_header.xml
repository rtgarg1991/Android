<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="190dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_material"
    android:id="@+id/drawer_header_main_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_header_image_view"
        android:layout_width="@dimen/drawer_list_profile_image_view_width"
        android:layout_height="@dimen/drawer_list_profile_image_view_height"
        android:src="@drawable/profile_male"
        app:border_color="#FF000000"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_header_text_view"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/drawer_header_image_view"
        android:layout_alignStart="@id/drawer_header_image_view" />
</LinearLayout>